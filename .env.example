# ===========================================
# Task Management System - Environment Config
# ===========================================
# Copy this file to .env and update the values

# Application
APP_NAME=Task Management System
APP_VERSION=1.0.0
DEBUG=false

# ===========================================
# Database Configuration
# ===========================================

# Option 1: Use DATABASE_URL directly (supports SQLite for local dev)
# DATABASE_URL=sqlite+aiosqlite:///./test.db

# Option 2: MySQL configuration (used if DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=task_management

# ===========================================
# Docker Compose Settings
# ===========================================
# These are used when running with docker-compose

# MySQL root password (for docker-compose)
MYSQL_ROOT_PASSWORD=rootpass123

# Database password (must match DB_PASSWORD for docker-compose)
# DB_PASSWORD=taskpass123

# ===========================================
# JWT Authentication
# ===========================================
# IMPORTANT: Change SECRET_KEY in production!
# Generate with: openssl rand -hex 32

SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
